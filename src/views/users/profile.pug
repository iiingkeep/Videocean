extends ../base 
include ../mixins/video

block content 
  div.profile__data
    if !user.avatarUrl
      img(src="/" + './uploads/avatars/avatar.jpg').avatar
    else
      img(src=user.avatarUrl).avatar
    h3=user.username
  div.video-grid
    each video in user.videos
      +video(video)
    else
      div.empty__message No videos found